@model IEnumerable<PharmacyManagementSystem.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Order</h2>

<div class="btn btn-outline-dark">
    @Html.ActionLink("Create New", "Create")
</div>

<br>
<hr />
<table class="table table-bordered table-condensed table-striped table-hover sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ord_detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_of_order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.unit_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medicine.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.ord_detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_of_order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unit_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine.name)
            </td>
            <td>
                <div class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ord_id }, new { style = "color: Black" })
                </div>
                <div class="btn btn-primary">
                    @Html.ActionLink("Details", "Details", new { id = item.ord_id }, new { style = "color: Black" })
                </div>

                <div class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.ord_id }, new { style = "color: Black" })
                </div>
            </td>
        </tr>
    }

</table>
