@model IEnumerable<PharmacyManagementSystem.Models.Medicine>

@{
    ViewBag.Title = "Index";
}

<h2>Medicine</h2>

<div class="btn btn-outline-dark">
    @Html.ActionLink("Create New", "Create")
</div>

<br>
<hr />
<table class="table table-bordered table-condensed table-striped table-hover sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.cat_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.cat_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.name)
            </td>
            <td>
                <div class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.med_id }, new { style = "color: Black" })
                </div>
                <div class="btn btn-primary">
                    @Html.ActionLink("Details", "Details", new { id = item.med_id }, new { style = "color: Black" })
                </div>

                <div class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.med_id }, new { style = "color: Black" })
                </div>
            </td>
        </tr>
    }

</table>
