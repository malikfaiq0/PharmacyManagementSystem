@model PharmacyManagementSystem.Models.login

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/_LoginLayoutPage1.cshtml";
}

<h2 style="color:white">Pharmacy Management System</h2>

@Html.Raw(ViewBag.InsertMessage)

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="w3l-login-form">
    <h2>Signup Here</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class=" w3l-form-group">
        @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "fas fa-user" })
        <div class="group">
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="w3l-form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "fas fa-envelope" })
        <div class="group">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="w3l-form-group">
        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "fas fa-unlock" })
        <div class="group">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="w3l-form-group">
        @Html.LabelFor(model => model.Confirm_password, htmlAttributes: new { @class = "fas fa-unlock" })
        <div class="group">
            @Html.EditorFor(model => model.Confirm_password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Confirm_password, "", new { @class = "text-danger" })
        </div>
    </div>

    <button type="submit">Signup</button>
    <div>
        <p class=" w3l-register-p">
            @Html.ActionLink("Back to Login", "Index")
        </p>

    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
